extends layout

block content
	h1 Place Your Order Here
	div
	form(action="/ingredient/submit", method="POST")
		| Name:	
		input(type="text", name="cname")
		p Select your ingredients:
		each ing, i in inglist
			div(value=ing) 
				input(type="checkbox", name=#{ing.name})
				| #{ing.name} at $ #{ing.cost}
		br
		input(type="submit", name="Submit")
